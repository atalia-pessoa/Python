print('Ouvi uma vez 'plante hoje para colher amanha.'')

#EXERCICIOS
pergunta1 = input('Qual o seu nome? ')
pergunta2 = input('Qual a sua idade? ')
pergunta3 = float(input('Qual a sua altura? '))
print(f'Ola, {pergunta1}, voce tem {pergunta2} anos e voce mede {pergunta3} metros de altura.')

pergunta4 = input('Digite um numero: ')
pergunta5 = input('Digite outro numero: ')
soma = int(pergunta4) + int(pergunta5)
print(f'A soma dos dois numero é: {soma}')

media_ponderada = (51 + 122 + 203 + 154) / (1+2+3+4)
print(f'Média {media_ponderada}.')

ESTRUTURAS CONDICIONAIS
media = float(6.0)
nota = float(input('Digite a nota do aluno: '))

if nota >= media:
print('Aluno aprovado!')
else:
print('Aluno reprovado!')

nota = float(input('Digite a nota do aluno: '))
if nota >= 6.0:
print('Aluno aprovado!')
if nota >= 4.0 and nota < 6.0:
print('Aluno de recuperação!')
if nota < 4.0:
print('Aluno reprovado!')

nota = float(input('Digite a nota do aluno: '))
if nota >= 6.0:
print('Aluno aprovado!')
elif nota >= 4.0 and nota < 6.0:
print('Aluno de recuperação!')
else:
print('Aluno reprovado!')
